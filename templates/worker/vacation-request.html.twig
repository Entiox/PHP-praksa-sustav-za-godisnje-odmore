{% extends 'base.html.twig' %}

{% block title %}Request vacation{% endblock %}

{% block body %}
    {{ form_start(form, { 'attr': { 'class': 'default_block' }}) }}
        <h4>Request vacation</h4>
        {{ form_widget(form, { 'attr': { 'class': 'default_block_content' }}) }}
        <button type="submit">CONFIRM</button>
        <div class="default_block_exit">
            <a href={{ path('app_worker') }}>CANCEL</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
