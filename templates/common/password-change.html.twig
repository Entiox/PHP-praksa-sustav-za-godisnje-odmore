{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    {{ form_start(form, { 'attr': { 'class': 'default_block' }}) }}
        <h4>Password change</h4>
        {{ form_widget(form, { 'attr': { 'class': 'default_block_content' }}) }}
        {% for flashMessage in app.flashes('error') %}
            <div class="flash_error">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="default_block_exit">
            <a href={{ path('app_base') }}>RETURN</a>
        </div>
    {{ form_end(form) }}
{% endblock %}